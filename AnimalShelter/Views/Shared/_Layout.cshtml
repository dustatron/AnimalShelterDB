
<!DOCTYPE html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Animal Shelter List</title>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Animal Shelter</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/animals">List Animals</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/animals/create">Add Animal</a>
        </li>
      </ul>
      <div class="form-inline my-2 my-lg-0">
      @using (Html.BeginForm("search","Animals")) {
      <input type="text" name="search" class="form-control mr-sm-2"/>
      <input type="submit" value="search" class="btn btn-outline-success my-2 my-sm-0">
      }
      </div>
  </nav>
    <div class="container">
    @RenderBody()
    </div>
  </body>
</html>