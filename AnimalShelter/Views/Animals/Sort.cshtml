@{
  Layout = "_Layout";
}

<h1> SORT </h1>
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>

@if(Model.Count == 0)
{
  <p> No animals in system yet </p>
}
else
{
  <ul>
    @foreach(Animal animal in Model)
    {
      <li> @Html.ActionLink($"{animal.Type}", "Details", new {id = animal.AnimalId}) : @animal.Name</li>
    }
  </ul>
}

